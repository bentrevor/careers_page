<p><%= @position.name %></p>
<p><%= @position.description %></p>

<%= form_for(@job_application, url: { action: "create" }) do |f| %>
  <div>
    <%= f.label "Full Name" %>
    <%= f.text_field :full_name %>
  </div>

  <div>
    <%= f.label "Email" %>
    <%= f.email_field :applicant, :email %>
  </div>

  <div>
    <%= f.label "Phone" %>
    <%= f.telephone_field :applicant, :phone %>
  </div>

  <!-- TODO attachment fields -->

  <%= f.submit "Apply" %>
<% end %>
